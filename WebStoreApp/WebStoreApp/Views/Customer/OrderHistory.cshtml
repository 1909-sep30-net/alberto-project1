@model List<OrderDetailsViewModel>


<table class="table table-condensed"  >
    <thead>



        <tr>
            <th>
                Location
            </th>
            
            <th>
                Product

            </th>
            <th>
                Price
            </th>

            <th>
                Quantity

            </th>
        </tr>

    </thead>
    <tbody>

        @foreach (var order in Model)
        {

        <tr>
            <td>
                <h4 style="color:darkred"> @Html.DisplayFor(model => order.LocationName)</h4>
                <h7>@Html.DisplayFor(model => order.Date)</h7>
            </td>
            <td></td>
            <td></td>
            <td></td>
        </tr>


            @foreach (var product in order.Products)
            {
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Quantity)
                    </td>
                </tr>
            }


    <tr>
        <td></td>
        <td></td>
        <td></td>

        <td>
            <h4 class="text-right" style="color:blue;">Total: $@Html.DisplayFor(modelItem => order.Total)</h4>
        </td>
    </tr>
        }
    </tbody>

</table>


